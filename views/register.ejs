<%- include('partials/header') %>
<div class="form-container">
    <h2>Register</h2>
    <% if(locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <form method="post" encType="multipart/form-data">
		<div class="form-group">
			<label for="name">Name</label>
			<input type="text" name="name" id="name" class="form-control" value="<%= locals.name || '' %>" required />
		</div>
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" name="username" id="username" class="form-control" value="<%= locals.username || '' %>" required />
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="form-control" required />
        </div>
		<div class="form-group">
			<label for="gender">Gender</label>
			<select id="gender" class="form-control" name="gender">
				<option value="Male">Male</option>
				<option value="Female">Female</option>
			</select>
		</div>
		<div class="form-group">
			<label for="age">Age</label>
			<input type="number" name="age" id="age" class="form-control" value="<%= locals.age || '' %>" required />
		</div>
		<div class="form-group">
			<label for="address">Address</label>
			<input type="text" name="address" id="address" class="form-control" value="<%= locals.address || '' %>" required />
		</div>
		<div class="form-group">
			<label for="phoneNumber">Phone Number</label>
			<input type="text" name="phoneNumber" id="phoneNumber" class="form-control" value="<%= locals.phoneNumber || '' %>" required />
		</div>
		<div class="form-group">
			<label for="phoneNumber">Email</label>
			<input type="text" name="email" id="email" class="form-control" value="<%= locals.email || '' %>" required />
		</div>
		<div class="form-group">
			<label for="avatar">Please choose a photo for your Avatar</label>
			<input type="file" name="avatar" id="avatar" multiple accept="image/*" />
		</div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Register</button>
            <a href="/login" class="btn btn-link">Cancel</a>
        </div>
    </form>
</div>
<%- include('partials/footer') %>